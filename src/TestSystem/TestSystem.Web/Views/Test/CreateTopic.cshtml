@model TestSystem.Web.Models.TopicModel

@{
    ViewData["Title"] = "CreateTopic";
}

<h4 class="d-flex justify-content-center">Create Topic</h4>

<div class="d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="CreateTopic">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassingPoints" class="control-label"></label>
                <input asp-for="PassingPoints" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

