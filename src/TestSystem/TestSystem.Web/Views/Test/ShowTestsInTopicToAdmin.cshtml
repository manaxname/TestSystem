@model IEnumerable<TestSystem.Web.Models.TestModel>

@{
    ViewData["Title"] = "Tests";

    int topicId = int.Parse(ViewData["TopicId"].ToString());

    int page = 1;
    if (ViewData.ContainsKey("Page"))
    {
        page = int.Parse(ViewData["Page"].ToString());
    }

    int size = 5;
    if (ViewData.ContainsKey("Size"))
    {
        size = int.Parse(ViewData["Size"].ToString());
    }

    int topicsCount = 0;
    if (ViewData.ContainsKey("TopicsCount"))
    {
        topicsCount = int.Parse(ViewData["TopicsCount"].ToString());
    }

    string search = string.Empty;
    if (ViewData.ContainsKey("Search"))
    {
        search = ViewData["Search"].ToString();
    }

    string searchParam = string.Empty;
    if (!string.IsNullOrWhiteSpace(search))
    {
        search = $"Search={search}";
    }
}

<h4 class="d-flex justify-content-center">Tests</h4>

<p>
    @Html.ActionLink("Create new Test", "CreateTest", "Test", new { @TopicId = topicId }, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Minutes)
            </th>
            <th>
                Edit
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Minutes)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditTest", "Test", new { @TopicId = topicId, @TestId = item.Id }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Back to Topics", "Index", "Home", new { @TopicId = topicId, @Page = page, @Size = size }, new { @class = "btn btn-secondary" })
</div>